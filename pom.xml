<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.kloudtek.kloudmake</groupId>
    <artifactId>kloudmake</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <reflections.version>0.9.9-RC2</reflections.version>
    </properties>

    <modules>
        <module>core-api</module>
        <module>core-impl</module>
        <module>cli</module>
        <module>lang-ruby</module>
    </modules>
    <packaging>pom</packaging>
    <name>KloudMake</name>
    <description>Next generation devops tool designed for the enterprise</description>
    <url>https://github.com/Kloudtek/kloudmake</url>

    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.8.8</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.9.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <extensions>
            <extension>
                <groupId>org.springframework.build</groupId>
                <artifactId>aws-maven</artifactId>
                <version>5.0.0.RELEASE</version>
            </extension>
        </extensions>
    </build>

    <repositories>
        <repository>
            <id>kloudtek-oss-release-http</id>
            <name>S3 Release Repository</name>
            <url>https://s3.amazonaws.com/maven.kloudtek.com/release</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>kloudtek-oss-snapshot-http</id>
            <name>S3 Release Repository</name>
            <url>https://s3.amazonaws.com/maven.kloudtek.com/snapshot</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>kloudtek-release-s3</id>
            <name>S3 Release Repository</name>
            <url>s3://kloudtek-maven-private/release</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>kloudtek-snapshot-s3</id>
            <name>S3 Snapshot Repository</name>
            <url>s3://kloudtek-maven-private/snapshot</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>kloudtek-oss-release-http</id>
            <name>S3 Release Repository</name>
            <url>https://s3.amazonaws.com/maven.kloudtek.com/release</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>kloudtek-oss-snapshot-http</id>
            <name>S3 Snapshot Repository</name>
            <url>https://s3.amazonaws.com/maven.kloudtek.com/snapshot</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>kloudtek-snapshot-s3</id>
            <name>S3 Snapshot Repository</name>
            <url>s3://kloudtek-maven-private/snapshot</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>kloudtek-release-s3</id>
            <name>S3 Release Repository</name>
            <url>s3://kloudtek-maven-private/release</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    <distributionManagement>
        <repository>
            <id>kloudtek-release-s3</id>
            <name>S3 Release Repository</name>
            <url>s3://kloudtek-maven-private/release</url>
        </repository>
        <snapshotRepository>
            <id>kloudtek-snapshot-s3</id>
            <name>S3 Snapshot Repository</name>
            <url>s3://kloudtek-maven-private/snapshot</url>
        </snapshotRepository>
    </distributionManagement>
</project>