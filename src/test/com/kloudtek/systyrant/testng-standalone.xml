<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Systyrant Test Suite" verbose="1">
    <test name="Engine">
        <groups>
            <run>
                <exclude name="ssh"/>
                <exclude name="vagrant"/>
            </run>
        </groups>
        <packages>
            <package name="com.kloudtek.systyrant"/>
            <package name="com.kloudtek.systyrant.dsl"/>
        </packages>
    </test>
    <test name="Core Modules">
        <groups>
            <run>
                <exclude name="ssh"/>
                <exclude name="vagrant"/>
            </run>
        </groups>
        <packages>
            <package name="com.kloudtek.systyrant.core"/>
        </packages>
    </test>
</suite>